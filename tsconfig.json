{
  "extends": "@sourcegraph/tsconfig",
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "allowJs": false,
    "moduleResolution": "node",
    "lib": ["esnext"],
    "rootDir": ".",
    "allowSyntheticDefaultImports": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "sourceMap": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "scip.ts",
    "snapshots"
  ]
}
